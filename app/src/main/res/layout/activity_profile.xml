<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.LoginActivity">

        <include
            android:id="@+id/igToolbar"
            layout="@layout/toolbar" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5dip"
                app:cardBackgroundColor="@color/login_box"
                app:cardElevation="@dimen/_5dip"
                android:layout_margin="@dimen/_4dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4dip"
                        android:layout_marginHorizontal="@dimen/_5dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name : "
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sp" />
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dip"
                        android:padding="@dimen/_2dip"
                        android:layout_marginHorizontal="@dimen/_5dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email : "
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sp" />
                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_14sp"
                            android:layout_marginStart="@dimen/_10dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dip"
                        android:padding="@dimen/_2dip"
                        android:layout_marginHorizontal="@dimen/_5dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number : "
                            android:layout_below="@+id/tvDate"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:id="@+id/tvMobNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_below="@+id/tvDate"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_14sp"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dip"
                        android:padding="@dimen/_2dip"
                        android:layout_marginHorizontal="@dimen/_5dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usertype : "
                            android:layout_below="@+id/tvStartTime"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_14sp" />
                        <TextView
                            android:id="@+id/tvUserType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_below="@+id/tvStartTime"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_14sp"
                            android:layout_marginStart="@dimen/_10dp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dip"
                        android:padding="@dimen/_2dip"
                        android:layout_marginHorizontal="@dimen/_5dip"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area Name : "
                            android:layout_below="@+id/tvEndTime"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="@dimen/_12sp" />

                        <TextView
                            android:id="@+id/tvAreaName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_below="@+id/tvEndTime"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="@dimen/_14sp"
                            android:layout_marginStart="@dimen/_10dp"
                            android:textColor="@color/black" />

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>



    </LinearLayout>

</layout>
